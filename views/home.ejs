<%- include('partials/header') -%>

<div class="page-wrapper">
	<% if(posts.length == 0){ %>
	<h1>Welcome!</h1>
	<p><%= welcomeContent %></p>
	<% } %>

	<% posts.forEach(function(post){ %>
	<h1><%=post.title%></h1>
	<p>
		<%=post.text.substring(0, 100) + '...'%>
		<a href="/posts/<%=post.title%>" class="link">Read more</a>
	</p>
	<% }) %>
</div>

<%- include('partials/footer') -%>
